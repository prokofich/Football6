<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fdbc35"
    android:layout_height="match_parent"
    tools:context=".view.PenaltyFragment">

    <ImageView
        android:layout_width="82dp"
        android:id="@+id/id_image_penalty"
        android:layout_marginTop="10dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/emblemapenalty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="370dp"
                android:textSize="26dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="An 11-meter kick is awarded if a player has committed a violation punishable by a free kick inside his penalty area or outside the field as part of a game action"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="191dp"
                android:gravity="left"
                android:textStyle="italic"
                android:text="punch 20 penalties and record the number of goals"
                android:layout_height="43dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="75dp">

                <EditText
                    android:layout_width="277dp"
                    android:id="@+id/id_edittext_goals_penalty"
                    android:hint="all - time record: 17"
                    android:textSize="20dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="20dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="93dp"
                    android:text="enter"
                    android:id="@+id/id_button_enter_penalty"
                    android:textColor="@color/white"
                    android:background="#4e4d4b"
                    android:layout_height="75dp"/>
            </LinearLayout>



            <ImageView
                android:layout_width="142dp"
                android:id="@+id/id_gif_penalty"
                android:layout_marginTop="10dp"
                android:layout_height="142dp"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="224dp"
                android:id="@+id/id_button_to_rv_penalty"
                android:textColor="@color/white"
                android:text="best penalty shootout performers"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="#4e4d4b" />

        </LinearLayout>

</LinearLayout>